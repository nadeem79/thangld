<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">

  
  <class name="beans.Mail, beans" table="mail" lazy="false">
    <id name="ID" column="id" type="Int32">
      <generator class="identity"/>
    </id>
    <many-to-one name="From" class="beans.Player, beans" lazy="proxy" column="sender" not-null="true" cascade="none" />
    <many-to-one name="To" class="beans.Player, beans" lazy="proxy" column="receiver" not-null="true" cascade="none" />
    <property name="Time" column="time" type="timestamp"/>
    <property name="Title" column="title" type="String" />
    <property name="Detail" column="detail" type="String" />
    <property name="Unread" column="unread" type="Boolean" />
    <property name="SenderDelete" column="sender_delete" type="Boolean" />
    <property name="ReceiverDelete" column="receiver_delete" type="Boolean" />
  </class>
</hibernate-mapping>