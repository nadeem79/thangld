<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">

  <class name="beans.Recruit, beans" table="recruit" lazy="false">

    <id name="ID" column="id" type="Int32">
      <generator class="identity"/>
    </id>
    
    <many-to-one name="InVillage" class="beans.Village, beans" column="village_id" not-null="true" cascade="none" />
    <property name="Troop" column="troop" type="beans.TroopType, beans" />
    <property name="Quantity" column="quantity" type="Int32" />
    <property name="LastUpdate" column="start_time" type="timestamp" />
  </class>

</hibernate-mapping>