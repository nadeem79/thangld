<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">

  <class name="beans.StringConfiguration, beans" table="string_configuration" lazy="false">

    <id name="Key" column="id" type="string">
      <generator class="assigned"/>
    </id>

    <property name="Value" column="item" type="string" />
  </class>

  <class name="beans.NumericConfiguration, beans" table="numeric_configuration" lazy="false">

    <id name="Key" column="id" type="string">
      <generator class="assigned"/>
    </id>

    <property name="Value" column="item" type="double" />
  </class>

</hibernate-mapping>