<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  
  <class name="beans.Group, beans" table="groups" lazy="false">

    <id name="ID" column="id" type="Int32">
      <generator class="identity"/>
    </id>

    <property name="Name" column="name" length="200" type="String" not-null="true"/>
    <property name="Tag" column="tag" type="string" length="10" not-null="true" unique="true" />
    <property name="Description" column="description" type="string" length="10000" not-null="false" />
    <property name="Introduction" column="introduction" type="string" length="10000" not-null="false" />
    <property name="Avatar" column="avatar" type="Boolean" not-null="false" />

    <bag name="Members" table="users" cascade="none" fetch="join" inverse="true" lazy="1" order-by="point desc">
      <key column="group_id" />
      <one-to-many class="beans.Player, beans" not-found="ignore"/>
    </bag>
    
    <bag name="Invites" table="invite" cascade="none" fetch="join" inverse="true" lazy="true">
      <key column="group_id" />
      <one-to-many class="beans.TribeInvite, beans" not-found="ignore"/>
    </bag>

    <bag name="Naps" table="diplomates" lazy="true" cascade="save-update">
      <key column="group_1" />
      <many-to-many class="beans.Group, beans" column="group_2" />
      <filter name="NapFilter" condition="type=1"></filter>
    </bag>
    <bag name="Allies" table="diplomates" lazy="true" cascade="save-update">
      <key column="group_1" />
      <many-to-many class="beans.Group, beans" column="group_2" />
      <filter name="AllyFilter" condition="type=2"></filter>
    </bag>
    <bag name="Enemies" table="diplomates" lazy="true" cascade="save-update">
      <key column="group_1" />
      <many-to-many class="beans.Group, beans" column="group_2" />
      <filter name="EnemyFilter" condition="type=3"></filter>
    </bag>

  </class>

  <class name="beans.TribeRelation, beans" table="diplomates" lazy="false">
    <id name="ID" column="id" type="Int32">
      <generator class="identity"/>
    </id>

    <many-to-one name="CurrentTribe" class="beans.Group, beans" column="group_1" not-null="false" fetch="join" cascade="none" />
    <many-to-one name="DiplomaticTribe" class="beans.Group, beans" column="group_2" not-null="false" fetch="join" cascade="none" />
    <property name="Diplomacy" column="type" type="beans.TribeDiplomate, beans" not-null="false" />
  </class>

</hibernate-mapping>