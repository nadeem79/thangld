                                    <telerik:RadMenuItem runat="server" Text="Phòng thủ" NavigateUrl="list_report.aspx?type=2"
                                        ValidationGroup="menu">
                                    </telerik:RadMenuItem>
                                    <telerik:RadMenuItem runat="server" Text="Hỗ trợ" NavigateUrl="list_report.aspx?type=3"
                                        ValidationGroup="menu">
                                    </telerik:RadMenuItem>
