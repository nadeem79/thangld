                                </Items>
                            </telerik:RadMenuItem>
                            <telerik:RadMenuItem runat="server" Text="Báo cáo" NavigateUrl="list_report.aspx">
                                <Items>
                                    <telerik:RadMenuItem runat="server" Text="Tất cả" NavigateUrl="list_report.aspx?type=0"
                                        ValidationGroup="menu">
                                    </telerik:RadMenuItem>
